<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hobby_list_tree" model="ir.ui.view">
        <field name="name">student.hobby.tree</field>
        <field name="model">student.hobby</field>
        <field name="arch" type="xml">
            <list string="Hobby">
                <field name="id" readonly="1"/>
                <field name="name" placeholder="Enter Your Name" />




            </list>
        </field>
    </record>

    <record id="view_hobby_list_form" model="ir.ui.view">
        <field name="name">student.hobby.form</field>
        <field name="model">student.hobby</field>
        <field name="arch" type="xml">
            <form string="Hobby">
                <field name="id" readonly="1"/>
                <field name="name"/>


            </form>
        </field>
    </record>



    <record id="action_hobby_list" model="ir.actions.act_window">
        <field name="name">Hobby</field>
        <field name="res_model">student.hobby</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Hobby
            </p>
        </field>

    </record>
</odoo>